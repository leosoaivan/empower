<%= form_with url: clients_path, method: :get, local: true, class: 'search-form' do |f| %>
  <div class='row'> 
    <div class='input-field col s12 m4'>
      <%= f.label :where_id, "ID" %>
      <%= f.text_field :where_id,
        class: 'search-form__input' %>
    </div>

    <div class='input-field col s12 m4'>
      <%= f.label :where_first_name_like, "First name" %>
      <%= f.text_field :where_first_name_like,
        class: 'search-form__input' %>
    </div>
    
    <div class='input-field col s12 m4'>
      <%= f.label :where_last_name_like, "Last name" %>
      <%= f.text_field :where_last_name_like,
        class: 'search-form__input' %>
    </div>
  </div>
    
  <div class='row'>
    <div class='col s10 offset-s1 m6 offset-m3'>
      <%= submit_tag 'Search', class: 'search-form__submit btn' %>
    </div>
  </div>
<% end %>