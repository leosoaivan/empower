<%= form_with scope: :query, url: search_clients_path, method: :get, local: true, class: 'search-form' do |f| %>
  <div class='row'> 
    <div class='input-field col s12 l6'>
      <%= f.label "id", "ID" %>
      <%= f.text_field :id,
        class: 'search-form__input' %>
    </div>
  </div>

  <div class='row'>
    <div class='input-field col s12 l6'>
      <%= f.label "firstname", "First name" %>
      <%= f.text_field :firstname,
        class: 'search-form__input' %>
    </div>
    
    <div class='input-field col s12 l6'>
      <%= f.label "lastname", "Last name" %>
      <%= f.text_field :lastname,
        class: 'search-form__input' %>
    </div>
  </div>

  <div class='row'>
    <div class='col s12 l7'>
      <%= submit_tag 'Search', class: 'search-form__submit btn' %>
    </div>
  </div>
<% end %>
